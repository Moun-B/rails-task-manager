<h1>Tasks</h1>
<div>
  <% @tasks.each do |task| %>
    <p><%= link_to task.title, task_path(task) %></p>
    <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" } do %>
      <p><i class="fa-solid fa-trash-can"></i></p>
    <% end %>
  <% end %>
</div>
<div>
  <p><%= link_to "Add a new task", new_task_path %></p>
</div>
